{
  "name": "@monorepo/root",
  "private": true,
  "version": "0.0.1",
  "repository": "git@github.com:kubev2v/forklift-console-plugin.git",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf coverage && npm run clean -ws",
    "clean:all": "npm run clean && rm -rf node_modules && npm run clean:all -ws",
    "build": "npm run build -w @kubev2v/legacy -w @kubev2v/webpack -w @kubev2v/common",
    "start": "npx webpack serve",
    "start:console": "source ./ci-scripts/configure/openshift.sh && ./ci-scripts/start-console.sh",
    "start:console:oauth": "source ./ci-scripts/configure/openshift-auth.sh && ./ci-scripts/start-console.sh",
    "i18n": "i18next \"src/**/*.{js,jsx,ts,tsx}\" [-oc] -c i18next-parser.config.mjs",
    "lint": "eslint . && stylelint \"src/**/*.css\" --allow-empty-input",
    "lint:fix": "eslint . --fix && stylelint \"src/**/*.css\" --allow-empty-input --fix",
    "test": "jest",
    "test:i18n": "./ci-scripts/test-i18n.sh",
    "test:coverage": "jest --coverage",
    "test:updateSnapshot": "jest --updateSnapshot",
    "indexify:overwrite": "npm run indexify:overwrite -ws",
    "helm:lint": "helm lint helm/forklift-console-plugin/",
    "helm:index": "helm repo index ./tmp/ --url https://kubev2v.github.io/forklift-console-plugin",
    "helm:build": "mkdir -p tmp && helm package -d tmp helm/forklift-console-plugin/ && yarn helm:index"
  }
}
